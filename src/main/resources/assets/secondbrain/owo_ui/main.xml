<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>

                        <flow-layout direction="horizontal">
                            <children>
                                <texture texture="secondbrain:icon.png" v="0" u="0" region-width="8"
                                         region-height="8" texture-width="8" texture-height="8">
                                    <blend>true</blend>
                                    <margins>
                                        <right>1</right>
                                    </margins>
                                </texture>
                                <label>
                                    <text>SecondBrain</text>
                                    <shadow>true</shadow>
                                    <margins>
                                        <left>1</left>
                                    </margins>
                                </label>
                            </children>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <button id="add_npc">
                                    <text>Add NPC</text>
                                </button>
                                <button id="edit_base">
                                    <text>Edit Config</text>
                                </button>
                            </children>

                            <padding>
                                <all>10</all>
                            </padding>

                            <gap>10</gap>

                            <surface>
                                <panel dark="true"/>
                            </surface>
                        </flow-layout>

                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="npc">
                                <children>
                                </children>
                            </flow-layout>
                            <sizing>
                                <vertical method="fill">25</vertical>
                            </sizing>
                        </scroll>

                    </children>

                    <gap>1</gap>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
